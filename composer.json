{
    "name": "neos/docs-neos-io-distribution",
    "description": "docs.neos.io website distribution",
    "license": "GPL-3.0-or-later",
    "config": {
        "vendor-dir": "Packages/Libraries",
        "bin-dir": "bin",
        "platform": {
            "php": "8.1.3"
        }
    },
    "minimum-stability": "dev",
    "require": {
        "php": "^8.1",
        "neos/docs-neos-io": "@dev",
        "neos/neos": "dev-master as 8.0.0",
        "neos/neos-ui": "dev-master as 8.0.0",
        "neos/flow": "dev-master as 8.0.0",
        "neos/neos-ui-compiled": "dev-master as 8.0.0",

        "flownative/google-cloudstorage": "^5.0",
        "rokka/imagine-vips": "^0.13",

        "neos/contentrepository-development-collection": "dev-master",
        "neos/content-repository-dimensionspace": "dev-master",
        "cweagans/composer-patches": "^1.7",
        "codeq/htmlwidget" : "dev-eventsourced-dependency-fix"
    },
    "repositories": {
        "distribution": {
            "type": "path",
            "url": "./DistributionPackages/*"
        },
        "htmlwidget": {
            "type": "git",
            "url": "https://github.com/skurfuerst/neos-htmlwidget"
        },
        "hyphen": {
            "type": "git",
            "url": "https://github.com/skurfuerst/Carbon.Hyphen"
        },
        "link": {
            "type": "git",
            "url": "https://github.com/skurfuerst/Carbon.Link"
        }
    },
    "scripts": {
        "post-update-cmd": "Neos\\Flow\\Composer\\InstallerScripts::postUpdateAndInstall",
        "post-install-cmd": "Neos\\Flow\\Composer\\InstallerScripts::postUpdateAndInstall",
        "post-package-update": "Neos\\Flow\\Composer\\InstallerScripts::postPackageUpdateAndInstall",
        "post-package-install": "Neos\\Flow\\Composer\\InstallerScripts::postPackageUpdateAndInstall"
    },
    "extra": {
        "patches-file": "https://raw.githubusercontent.com/neos/contentrepository-development-collection/master/Neos.EventSourcedNeosAdjustments/composer.patches.json"
    },
    "require-dev": {
        "sandstorm/phpprofiler": "dev-master",
        "sandstorm/plumber": "3.0.*"
    }
}
